{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes":  true,
      "LogLevel": {
        "Default": "Information"
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "EventLog": {
      "IncludeScopes": true
    },
    "ApplicationInsights": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Error",
        "CriticalClass": "Information"
      }
    },
    //The file logger uses the SeriLog implementation
    "Serilog": {
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 20971520, // = 20MB
      "LogLevel": {
        "Default": "Trace"
      }
    }
  }
}
